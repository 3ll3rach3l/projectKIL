extends layout.pug

append head
	script(src='/public/js/projects-edit-form.js' type='module')
	link(rel='stylesheet' href='/public/styles-project-edit.css')

block content
	.edit-container
		#errors-container
		#edit-header-container
			#edit-header
				button#edit-header__add-images + Click To Add Images
			#edit-nav
				#edit-nav__left-container
					button#edit-nav__add.btn.edit-nav__button Add
					button#edit-nav__more.btn.edit-nav__button More
				#edit-nav__right-container
					button#edit-nav__preview.btn.edit-nav__button Full Preview
					button#edit-nav__save.btn.edit-nav__button Save
					button#edit-nav__publish.btn-primary.edit-nav__button Publish
		.edit-main-container(id=`${projectId}`)
		#edit-main__footer
			button#edit-main__add-step
